{
  "name": "@designtools/monorepo",
  "private": true,
  "type": "module",
  "license": "CC-BY-NC-4.0",
  "author": "Andrew Flett",
  "repository": {
    "type": "git",
    "url": "https://github.com/andflett/designtools"
  },
  "workspaces": [
    "packages/core",
    "packages/studio",
    "packages/shadows"
  ],
  "scripts": {
    "dev:studio": "npm -w packages/studio run dev",
    "dev:shadows": "npm -w packages/shadows run dev",
    "dev:studio-client": "npm -w packages/studio run dev:client",
    "dev:shadows-client": "npm -w packages/shadows run dev:client",
    "build": "npm -w packages/studio run build && npm -w packages/shadows run build",
    "build:studio": "npm -w packages/studio run build",
    "build:shadows": "npm -w packages/shadows run build",
    "demo": "cd packages/demo && npm run dev",
    "demo:bootstrap": "cd demos/bootstrap-app && npm run dev",
    "demo:w3c-tokens": "cd demos/w3c-tokens-app && npm run dev",
    "demo:css-vars": "cd demos/css-variables-app && npm run dev",
    "publish:all": "bash scripts/publish.sh"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  }
}